@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

<link href="~/css/Packages.css" rel="stylesheet" />
@model IEnumerable<Package>

<div class="home-content">
    <div class="row">
        
    @foreach (var item in Model)
    {
            <div class="col-3">
    
       
            <section>
                <div class="card">
                    <div class="top-content">
                        <div class="travel-image">
                            <img src="~/img/travel.jpg" alt="">
                        </div>
                        <div class="top-bar">
                            <img class="top-icons" src="~/img/back-arrow.png" alt="Backarrow">
                            <img class="top-icons" src="~/img/heart.png" alt="heart">
                        </div>
                    </div>
                    <div class="mid-content">
                        <div class="short-detail">
                            <h3>@item.nameOfPackage</h3>
                            <span>
                                <img src="~/img/star.png" alt=""> 4.5
                            </span>&nbsp;&nbsp;
                            <span>
                                <img src="~/img/cloudy.png" alt=""> 17 C
                            </span>&nbsp;&nbsp;
                            <span>
                                <img src="~/img/plane.png" alt=""> 17Hrs
                            </span>
                        </div>
                    </div>
                    <div class="desc-content">
                        <div class="desc-nav">
                            <span>@item.destination1</span>
                            <span>@item.destination2</span>
                            <span>@item.destination3</span>
                        </div>
                        <p>
                            @item.description
                            <a>Know More</a>
                        </p>
                    </div>
                    <div class="bottom-content">
                        <div class="desc-nav">
                            <p>$@item.price/<span>@item.persons Persons</span></p>
                        </div>        
                    </div>
                        <div class="row bottom-content">
                            <button id="edit" href="">EDIT</button>
                            <button id="delete" href="Delete?id=@item.pack_id">DELETE</button>
                            <!--<a href="#" class="follow">EDIT</a>
                            <a href="Delete?id=@item.pack_id" class="info">DELETE</a>-->
                        </div>
                </div>
            </section>
            </div>
    }
       
    </div>
</div>


